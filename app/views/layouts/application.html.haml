!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700|Montserrat:400,700'
    = stylesheet_link_tag 'application'
    = csrf_meta_tags
    = javascript_include_tag "application"

  %body{class: ("homepage" if current_page?('/'))}
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "gCamp", root_path, class: "navbar-brand"
        .navbar-collapse.collapse
        / /.navbar-collapse
    .container
      - unless notice.nil?
        .alert.alert-success= notice
      = yield
    %footer.page-footer
      .container
        .link-wrapper
          = link_to_unless_current "about", about_path
          |
          = link_to_unless_current "terms", terms_path
          |
          = link_to_unless_current "FAQ", faq_path
          |
          = link_to_unless_current "tasks", tasks_path
          |
          = link_to_unless_current "users", users_path
        .link-wrapper.pull-right
          = link_to 'http://www.linkedin.com/in/etmoore1/', target: "_blank" do
            = image_tag 'linkedin-logo.png'
          = link_to 'https://github.com/etmoore', target: "_blank" do
            = image_tag 'github-logo.png'
          = link_to 'https://twitter.com/etmoore', target: "_blank" do
            = image_tag 'twitter-logo.png'
          = link_to 'https://students.gschool.it/students/91', target: "_blank" do
            = image_tag 'gschool-logo.png'
