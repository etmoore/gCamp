!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "../../favicon.ico", :rel => "icon"}/
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700|Montserrat:400,700'
    = stylesheet_link_tag 'application'
    = csrf_meta_tags

  %body{:class => ("homepage" if current_page?('/'))}
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "gCamp", root_path, class: "navbar-brand"
        .navbar-collapse.collapse
        / /.navbar-collapse
    .container
      = yield
    %footer.page-footer
      .container
        = link_to_unless_current("about", about_path)
        |
        = link_to_unless_current("terms", terms_path)
        |
        = link_to_unless_current("FAQ", faq_path)
    /
      Bootstrap core JavaScript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    = javascript_include_tag "application"
