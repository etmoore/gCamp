= page_header "Stories for #{@project[:name]}" do
  %span
    = "(showing first #{@stories.count})"

%table.table.table-striped.table-bordered
  %thead
    %th.active
      Story
    %th.active
      Estimate
    %th.active
      Labels
    %th.active
      Current State
  %tbody
    - @stories.reverse.each do |story|
      %tr
        %td.col-sm-6
          = link_to story[:name], story[:url]
        %td
          = story[:estimate]
        %td
          = join_labels(story)
        %td
          = story[:current_state]
%hr/
