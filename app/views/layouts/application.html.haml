!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "../../favicon.ico", :rel => "icon"}/
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700|Montserrat:400,700'
    = stylesheet_link_tag 'application'

  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "gCamp", root_path, class: "navbar-brand"
        .navbar-collapse.collapse
        / /.navbar-collapse
    / Main jumbotron for a primary marketing message or call to action
    .container
      = yield
      %footer.container
        %hr
        = link_to "about", about_path
        |
        = link_to "terms", terms_path

      -# FIXTHIS Change this so that it uses `link_to`
      -# %a.footer-tab.text-center{href: "http://www.github.com/etmoore"}
      -#   = image_tag("etmoore-avatar.png", class:"footer-avatar", alt:"author avatar")
      -#   %span.copyright Â© Evan Moore 2014

    /
      Bootstrap core JavaScript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
