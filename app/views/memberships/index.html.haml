%h1="#{@project.name}: Manage Members"
%ol.breadcrumb
  %li=link_to "Projects", projects_path
  %li=link_to @project.name, project_path(@project)
  %li.active Memberships
=render 'form'


-@project.memberships.each do |membership|
  .row
    =form_for [membership.project, membership], html: {role: 'form', class: "form-inline"} do |f|
      .col-sm-2
        =link_to membership.user.full_name, user_path(membership.user)
      .col-sm-1
        =f.select :role, ["Member", "Owner"], {}, {class: 'form-control'}
      .col-sm-1
        =f.submit "Update", class: "btn btn-primary"
      .col-sm-1
        =link_to '', project_membership_path(membership.project, membership), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove"
