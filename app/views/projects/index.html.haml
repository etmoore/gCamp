.page-header
  .row.center-row
    %h1.col-sm-11.center
      Projects
    .col-sm-1.center
      = link_to 'Create Project', new_project_path, class: "btn btn-info"
%table.table
  %thead
    %tr
      %th Name
      %th Tasks
      %th Memberships
      %th
  %tbody
    - @projects.each do |project|
      %tr
        %td=link_to project.name, project
        %td=link_to project.tasks.count, project_tasks_path(project)
        %td=link_to project.memberships.count, project_memberships_path(project)
        %td
          .pull-right
            -if project.memberships.find_by(user_id: current_user.id, role: 'owner')
              = link_to 'Edit', edit_project_path(project), class: "btn btn-primary"
