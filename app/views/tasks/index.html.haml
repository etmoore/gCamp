.page-header
  %span.h1 Tasks
  %button.btn.btn-info.pull-right
    = link_to 'Create Task', new_task_path
%table.table
  %thead
    %tr
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.description
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
%br/
