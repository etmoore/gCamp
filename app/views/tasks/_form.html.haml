= form_for [@project, @task], html: {class: "form-horizontal", role: "form"} do |f|
  .form-group
    .col-sm-offset-2.col-sm-10
      =render 'shared/errors', model: @task

  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-5
      = f.text_field :description, class: "form-control"

  .form-group
    = f.label :due, class: "col-sm-2 control-label"
    .col-sm-2
      = f.date_field :due, class: "form-control"

  - if @task.id?
    .form-group
      .col-sm-offset-2.col-sm-10
        .checkbox
          %label
            = f.check_box :complete
            %span Complete

  .actions.form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
      = link_to "Cancel", project_tasks_path(@project), class: "btn btn-default"
