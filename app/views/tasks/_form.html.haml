= form_for(@task, html: {class: "form-horizontal"}) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li
            = message
  .field.form-group
    = f.label :description, class: "col-md-2"
    = f.text_field :description, class: "col-md-10"
  - if @task.id?
    .field.form-group
      = f.label :complete, class: "col-md-2"
      = f.check_box :complete, class: "col-md-1"
  .actions.form-group
    = f.submit class: "btn btn-primary col-md-offset-2"
