= page_header "#{@user.first_name} #{@user.last_name}" do
  -if current_user == @user || current_user.admin?
    = link_to 'Edit User', edit_user_path(@user), class: "btn btn-info"

%dl.dl-horizontal
  %dt First Name
  %dd= @user.first_name
%dl.dl-horizontal
  %dt Last Name
  %dd= @user.last_name
- if @user.tracker_token && !@user.tracker_token.lstrip.empty?
  %dl.dl-horizontal
    %dt Pivotal Tracker Token
    %dd= @user.censored_token
- if belongs_to_same_project?(@user) || current_user.admin?
  %dl.dl-horizontal
    %dt Email
    %dd= mail_to @user.email

= link_to 'All Users', users_path
