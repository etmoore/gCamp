.page-header
  %span.h1 Tasks
  = link_to 'Create Task', new_task_path, class: "btn btn-info pull-right"
%table.table
  %thead
    %tr
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.description
        %td= link_to 'Show', task, class: "btn btn-success"
        %td= link_to 'Edit', edit_task_path(task), class: "btn btn-primary"
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
%br/
